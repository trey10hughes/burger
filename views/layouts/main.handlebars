<!DOCTYPE html>
<html>

<head>
    <!-- Tab Title -->
    <title>Eat Your Burgers!</title>
    <!-- Tab Image -->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
        crossorigin="anonymous">
    <!-- Custom Styling -->
    <link rel="stylesheet" href="/assets/css/style.css">
</head>

<body>

    <!-- Page Container -->
    <div class="container">

        <br>


        <!-- Page Title -->
        <center>
            <h1 class="red_font">Eat Your Burgers!</h1>
        </center>

        <br>


        <!-- Burger Content from index.handlebars -->
        {{{body}}}


        <br>
        <br>

        <!-- Input New Burgers Form -->
        <form action="burger/create" method="POST">

            <!-- Text Area Input -->
            <div class="row">
                <!-- Empty Div to help center textarea -->
                <div class="col-md-3"></div>

                <!-- Burger Input Box -->
                <div class="form-group col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Add new burgers to eat here!</h3>
                        </div>
                        <div class="panel-body">
                            <div class="text-center">
                                
                   
                    <textarea class="form-control" columns="8" rows="4" id="new_burger" name="burger_name"></textarea>
                </div>

                <!-- Empty Div to help center textarea -->
                <div class="col-md-3"></div>
            </div>

            <!-- Submit Button -->
            <center>
                <button id="submit-button" type="submit" class="btn btn-danger">Add Burger</button>
            </center>

        </form>

        <br>

    </div>

    <!-- Link in jQuery -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>

</body>

</html>